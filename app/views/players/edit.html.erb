<h1>Editar Jugador</h1>

<%= form_with(model: @player, local: true) do |form| %>
  <div>
    <%= form.label :name, "Nombre" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :money, "Dinero" %>
    <%= form.number_field :money %>
  </div>

  <div>
    <%= form.submit "Actualizar datos del jugador" %>
  </div>
<% end %>

<%= link_to "Volver a la lista", players_path %>
