<div class="p-4 min-vh-100" style="background: url('<%= asset_path("poker-3825828_1280.jpg") %>') no-repeat center center; background-size: cover;">
  <div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h1 class="text-white">Nuevo Jugador</h1>
      <%= link_to "Volver a la lista", players_path, class: "btn btn-secondary" %>
    </div>

    <div class="card p-4 shadow-sm">
      <%= form_with(model: @player, local: true) do |form| %>
        <div class="mb-3">
          <%= form.label :name, "Nombre", class: "form-label" %>
          <%= form.text_field :name, class: "form-control" %>
        </div>

        <div class="text-end">
          <%= form.submit "Crear Jugador", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
